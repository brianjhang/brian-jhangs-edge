      border-radius: 6px;
      font-size: 12px;
      font-weight: 700;
      font-family: monospace;
      border: 1px solid rgba(245, 158, 11, 0.2);
    }
    
    .difficulty {
      padding: 4px 8px;
      border-radius: 6px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }
    
    .difficulty[data-level="beginner"] {
