    "astro": "^5.13.2"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.5.0",
    "@astrojs/vercel": "^8.2.6",
    "@vercel/og": "^0.8.5",
    "gray-matter": "^4.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
