{
  "name": "brian-jhangs-edge",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "setup:hooks": "git config core.hooksPath .githooks",
    "og:generate": "node scripts/simple-png-generator.js",
    "og:generate-all": "node scripts/simple-png-generator.js --all",
    "og:clean": "node cleanup-og-images.js",
    "og:sync": "node scripts/sync-og-paths.js",
    "og:sync-full": "node scripts/sync-og-paths.js --full",
    "og:sync-preview": "node scripts/sync-og-paths.js --dry-run",
    "publish:og-images": "npm run og:sync && npm run og:generate && git add public/images/og/ && echo '✅ OG 圖片已準備完成，請手動執行 git commit 和 git push'",
    "optimize:images": "node scripts/optimize-og-images.js",
    "optimize:update-refs": "node scripts/update-og-references.js",
    "optimize:complete": "npm run optimize:images && npm run optimize:update-refs && npm run build && echo '✅ 圖片優化完成'",
    "performance:check": "npx lighthouse https://brianjhang.com --preset=desktop --only-categories=performance --chrome-flags='--headless --no-sandbox'",
    "performance:monitor": "node scripts/performance-monitor.js",
    "performance:trends": "node scripts/performance-trends.js",
    "system:health": "node scripts/system-health-check.js",
    "project:maintenance": "node scripts/project-maintenance.js",
    "maintenance:audit": "npm audit && npm outdated",
    "maintenance:update": "npm update",
    "check": "npm run build && echo '✅ 格式檢查通過'",
    "publish:complete": "npm run check && npm run og:generate && echo '✅ 文章發布準備完成'"
  },
  "devDependencies": {
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/starlight": "^0.35.2",
    "astro": "^5.13.2",
    "astro-edge": "^0.9.2",
    "sharp": "^0.34.4"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.5.0",
    "@astrojs/vercel": "^8.0.4",
    "@vercel/og": "^0.8.5",
    "gray-matter": "^4.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
