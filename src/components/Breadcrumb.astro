---
interface BreadcrumbItem {
  title: string;
  url?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="breadcrumb" aria-label="breadcrumb">
  <ol class="breadcrumb-list">
    <li class="breadcrumb-item">
      <a href="/" class="breadcrumb-link">首頁</a>
    </li>
    {items.map((item, index) => (
      <li class="breadcrumb-item">
        <span class="breadcrumb-separator">/</span>
        {item.url ? (
          <a href={item.url} class="breadcrumb-link">{item.title}</a>
        ) : (
          <span class="breadcrumb-current">{item.title}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<!-- 結構化數據 -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "首頁",
      "item": "https://brianjhang.com"
    },
    ...items.map((item, index) => ({
      "@type": "ListItem", 
      "position": index + 2,
      "name": item.title,
      "item": item.url ? `https://brianjhang.com${item.url}` : undefined
    }))
  ]
})}></script>

<style>
  .breadcrumb {
    margin: 16px 0;
    font-size: 14px;
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 4px;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .breadcrumb-link {
    color: var(--brand);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .breadcrumb-link:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  .breadcrumb-separator {
    color: var(--muted);
    margin: 0 2px;
  }

  .breadcrumb-current {
    color: var(--text);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .breadcrumb {
      font-size: 12px;
      margin: 12px 0;
    }
  }
</style>