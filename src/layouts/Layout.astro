---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { getLangFromUrl } from '../i18n';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  series?: string;
  lang?: string;
}

const { title, description, image, type, series, lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const defaultDescription = currentLang === 'en'
  ? "Exploring infinite possibilities at the intersection of AI, entrepreneurship, and cryptocurrency"
  : "AI × Startups × Crypto：一人公司的實踐藍圖";

// 處理 OG 圖片 URL
let finalImage = `${Astro.site}favicon.svg`; // 預設

if (image) {
  // 如果有傳入 image 參數，使用它（通常來自文章 frontmatter）
  if (image.startsWith('http')) {
    finalImage = image; // 已經是完整 URL
  } else {
    finalImage = `${Astro.site}${image.startsWith('/') ? image.slice(1) : image}`;
  }
}
---

<html lang={currentLang === 'en' ? 'en' : 'zh-tw'}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description || defaultDescription} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description || defaultDescription} />
    <meta property="og:type" content={type || "article"} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={finalImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:site_name" content="Brian Jhang's Edge" />
    <meta property="og:locale" content={currentLang === 'en' ? 'en_US' : 'zh_TW'} />
    
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@brianjhang" />
    <meta name="twitter:creator" content="@brianjhang" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description || defaultDescription} />
    <meta name="twitter:image" content={finalImage} />
    <meta name="twitter:image:src" content={finalImage} />
    <meta name="twitter:image:width" content="1200" />
    <meta name="twitter:image:height" content="630" />
    <meta name="twitter:image:alt" content={`${title} - Brian Jhang's Edge`} />
    
    <!-- Facebook specific -->
    <meta property="article:author" content="Brian Jhang" />
    <meta property="article:publisher" content="https://www.facebook.com/brianjhang" />
    
    <!-- Additional OG tags for better compatibility -->
    <meta property="og:image:secure_url" content={finalImage} />
    <meta property="og:image:alt" content={`${title} - Brian Jhang's Edge`} />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Brian Jhang" />
    <meta name="theme-color" content="#0b0b0c" />
    
    <!-- Language alternatives -->
    <link rel="alternate" hreflang="zh-tw" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />
    
    <!-- Global Styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-7F14DYS5K2"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-7F14DYS5K2');
    </script>
    <style>
      :root { 
        --bg: #0b0b0c; 
        --muted: #9ca3af; 
        --card: #0f1115; 
        --border: #1f2937; 
        --brand: #fafafa;
        --card-hover: #121218;
        --shadow: 0 4px 12px rgba(0,0,0,0.15);
        --link: #60a5fa;
      }
      
      * { margin: 0; padding: 0; box-sizing: border-box; }
      
      body { 
        font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
        background: var(--bg);
        color: var(--brand);
        line-height: 1.6;
        min-height: 100vh;
      }
      
      a { color: var(--link); text-decoration: none; }
      a:hover { text-decoration: underline; }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }
    </style>
  </head>
  <body>
    <Header currentLang={currentLang} />

    <main>
      <slot />
    </main>

    <Footer currentLang={currentLang} />
  </body>
</html>