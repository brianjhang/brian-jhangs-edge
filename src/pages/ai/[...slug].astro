function generateOgImagePath(slug, image, seoOgImage, series) {
  // å¦‚æœ frontmatter ä¸­æœ‰è¨­å®š imageï¼Œå„ªå…ˆä½¿ç”¨
  if (image) {
    return image;
  }
  
  // å¦‚æœ SEO ä¸­æœ‰è¨­å®šï¼Œæ¬¡å„ªå…ˆä½¿ç”¨
  if (seoOgImage) {
    return seoOgImage;
  }
  
  // ä¿æŒç›®éŒ„çµæ§‹ï¼ŒæŒ‰ç…§å¯¦éš›æª”æ¡ˆè·¯å¾‘
  if (slug.includes('/')) {
    const parts = slug.split('/');
    const filename = `${parts[1]}.png`; // ä½¿ç”¨æ–‡ç« åç¨±ä½œç‚ºæª”å
    return `/images/og/${series}/${parts[0]}/${filename}`;
  }
  
  // é è¨­è¦å‰‡ï¼šç”¨ slug ç”Ÿæˆæª”å
  const fileName = slug + '.png';
  return `/images/og/${series}/${fileName}`;
}

