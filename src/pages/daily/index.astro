---
import { getCollection } from "astro:content";
const posts = (await getCollection("daily")).sort((a,b)=> (a.data.date < b.data.date ? 1 : -1));
---
<html lang="zh-Hant">
  <head><meta charset="utf-8" /><meta name="viewport" content="width=device-width, initial-scale=1" /><title>今日精選 | Brian Jhang's Edge</title></head>
  <body style="font-family:ui-sans-serif,system-ui;line-height:1.6;margin:0;">
    <main style="max-width:960px;margin:24px auto;padding:0 16px;">
      <h1>今日精選</h1>
      <ul style="list-style:none;padding:0;margin:0">
        {posts.map((p) => (
          <li style="margin:12px 0;padding:12px;border:1px solid #eee;border-radius:12px;">
            <a href={`/daily/${p.slug}`} style="text-decoration:none;color:#111;font-weight:600">{p.data.title}</a>
            <div style="color:#6b7280;font-size:14px;">{p.data.date} · {p.data.series}</div>
            <div style="color:#6b7280;font-size:14px;margin-top:4px;">{p.data.summary}</div>
          </li>
        ))}
      </ul>
    </main>
  </body>
</html>
