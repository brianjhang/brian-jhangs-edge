---
export const prerender = true;

import { getCollection } from "astro:content";
import Layout from '../../layouts/Layout.astro';
import { calculateReadingTime, formatReadingTime } from '../../utils/readingTime.js';
import { useTranslations } from '../../i18n';
import { generateArticleLink } from '../../utils/linkGenerator';
import { translationMap } from '../../data/translationMap';

const t = useTranslations('en');

// 獲取各個主題的文章（英文版優先，但也顯示中文文章）
const aiPosts = await getCollection("ai");
const startupPosts = await getCollection("startup");
const cryptoPosts = await getCollection("crypto");
const buildPosts = await getCollection("build");

// 按日期排序的函數
const byDateDesc = (a, b) => new Date(b.data.date) - new Date(a.data.date);

// 智能文章選擇：優先英文版，無英文版則顯示中文版，避免重複
const getSmartPostSelection = (posts) => {
  const postMap = new Map();

  // 遍歷所有文章，建立文章映射
  posts.forEach(post => {
    // 統一語言識別邏輯
    const slugParts = post.slug.split('/');
    const languageCodes = ['en', 'zh-cn', 'ja-jp', 'ko-kr'];
    const hasLanguagePrefix = languageCodes.includes(slugParts[0]);

    // 取得基礎 slug（移除語言前綴或舊格式後綴）
    let baseSlug = hasLanguagePrefix ? slugParts.slice(1).join('/') : post.slug;

    if (!postMap.has(baseSlug)) {
      // 如果是新文章，直接添加
      postMap.set(baseSlug, post);
    } else {
      // 如果已存在，檢查是否應該替換
      const existing = postMap.get(baseSlug);
      // 如果當前文章是英文版，優先使用英文版
      if (post.data.lang === 'en' || hasLanguagePrefix) {
        postMap.set(baseSlug, post);
      }
    }
  });

  return Array.from(postMap.values());
};

// 應用智能選擇到各主題文章
const smartAIPosts = getSmartPostSelection(aiPosts);
const smartStartupPosts = getSmartPostSelection(startupPosts);
const smartCryptoPosts = getSmartPostSelection(cryptoPosts);
const smartBuildPosts = getSmartPostSelection(buildPosts);

// 手動指定精選文章的 slug（可以指定多個，會自動選最新的）
// 注意：slug 需要是完整路徑 (series/category/article-name)
const featuredSlugs = {
  ai: [
    'en/ai/tools/astroedge-complete-guide',  // 英文版使用 en/ 前綴
    'ai/trends/openai-economic-report-2025',
    'ai/trends/o1-reasoning-revolution',
    'ai/trends/ai-agent-technology',
    'ai/tools/cursor-programming-revolution'
  ],
  startup: [
    'startup/book/naval-leverage-thinking-complete-guide',
    'startup/book/naval-wealth-principles',
    'startup/thiel/monopoly-business-truth'
  ],
  crypto: [
    'crypto/concepts/stablecoin-complete-analysis',
    'crypto/rwa/rwa-tokenization-complete-guide',
    'crypto/concepts/etf-impact'
  ]
};

// 獲取指定的精選文章，如果找不到則使用最新文章
const getFeaturedPost = (posts, slugs) => {
  // 如果是字符串，轉換為數組
  const slugArray = Array.isArray(slugs) ? slugs : [slugs];

  // 找到所有匹配的精選文章
  const featuredPosts = posts.filter(post => slugArray.includes(post.slug));

  if (featuredPosts.length > 0) {
    // 按 slug 在數組中的順序排序（保持指定順序）
    const orderedPosts = slugArray
      .map(slug => featuredPosts.find(post => post.slug === slug))
      .filter(post => post !== undefined);

    if (orderedPosts.length > 1) {
      // 使用當前日期計算輪播索引（每天更換一次）
      const today = new Date();
      const dayOfYear = Math.floor((today - new Date(today.getFullYear(), 0, 0)) / (1000 * 60 * 60 * 24));
      const rotationIndex = dayOfYear % orderedPosts.length;
      return orderedPosts[rotationIndex];
    } else {
      // 只有一篇文章時直接返回
      return orderedPosts[0];
    }
  }

  // 如果找不到指定文章，回退到最新文章
  return [...posts].sort(byDateDesc)[0];
};

const latestAI = getFeaturedPost(smartAIPosts, featuredSlugs.ai);
const latestStartup = getFeaturedPost(smartStartupPosts, featuredSlugs.startup);
const latestCrypto = getFeaturedPost(smartCryptoPosts, featuredSlugs.crypto);

// 合併所有文章並按日期排序，用於顯示最新文章
const allPosts = [...smartAIPosts, ...smartStartupPosts, ...smartCryptoPosts, ...smartBuildPosts];
const recentPosts = allPosts.sort(byDateDesc).slice(0, 6);

// 為文章添加閱讀時間和智能連結
const postsWithReadingTime = recentPosts.map(post => ({
  ...post,
  readingTime: calculateReadingTime(post.body),
  displayUrl: generateArticleLink(post, 'en', translationMap)
}));

const latestAIWithTime = latestAI ? {
  ...latestAI,
  readingTime: calculateReadingTime(latestAI.body),
  displayUrl: generateArticleLink(latestAI, 'en', translationMap)
} : null;
const latestStartupWithTime = latestStartup ? {
  ...latestStartup,
  readingTime: calculateReadingTime(latestStartup.body),
  displayUrl: generateArticleLink(latestStartup, 'en', translationMap)
} : null;
const latestCryptoWithTime = latestCrypto ? {
  ...latestCrypto,
  readingTime: calculateReadingTime(latestCrypto.body),
  displayUrl: generateArticleLink(latestCrypto, 'en', translationMap)
} : null;

const title = "Brian Jhang's Edge — AI × Startups × Crypto";
const description = "Exploring infinite possibilities at the intersection of AI, entrepreneurship, and cryptocurrency. Featured insights and cutting-edge analysis.";
