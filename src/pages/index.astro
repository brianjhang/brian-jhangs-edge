---
const title = "Brian Jhang's Edge";
const subtitle = "Building the Future with Grounded AI";
---
<html lang="zh-Hant">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Brian Jhang 的個人IP網站" />
  </head>
  <body style="margin:0;font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto;">
    <main style="min-height:100dvh;display:grid;place-items:center;background:#0b0b0c;color:#eaeaea;">
      <section style="max-width:720px;padding:40px;text-align:center;">
        <h1 style="font-size:40px;letter-spacing:0.5px;margin:0 0 12px 0;">{title}</h1>
        <p style="opacity:.85;margin:0 0 28px 0;">{subtitle}</p>
        <nav style="display:flex;gap:12px;justify-content:center;flex-wrap:wrap;">
          <a href="https://github.com/brianjhang" target="_blank" rel="noopener" style="padding:10px 14px;border:1px solid #333;border-radius:999px;text-decoration:none;color:#eaeaea;">GitHub</a>
          <a href="/posts" style="padding:10px 14px;border:1px solid #333;border-radius:999px;text-decoration:none;color:#eaeaea;">文章（稍後新增）</a>
        </nav>
      </section>
    </main>
  </body>
</html>
