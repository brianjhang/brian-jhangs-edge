function generateOgImagePath(slug, image, seoOgImage, series) {
  // å¦‚æœ frontmatter ä¸­æœ‰è¨­å®š imageï¼Œå„ªå…ˆä½¿ç”¨
  if (image) {
    return image;
  }
  
  // å¦‚æœ SEO ä¸­æœ‰è¨­å®šï¼Œæ¬¡å„ªå…ˆä½¿ç”¨
  if (seoOgImage) {
    return seoOgImage;
  }
  
  // æ ¹æ“š slug ç”Ÿæˆå®Œæ•´è·¯å¾‘ï¼Œä¿æŒç›®éŒ„çµæ§‹ä¸€è‡´
  // ä¾‹å¦‚: concepts/ai-native-lean-startup-pgv -> /images/og/startup/concepts/ai-native-lean-startup-pgv.png
  const pathParts = slug.split('/');
  const fileName = pathParts[pathParts.length - 1] + '.png'; // å–æœ€å¾Œä¸€éƒ¨åˆ†ä½œç‚ºæª”å
  const dirPath = pathParts.slice(0, -1).join('/'); // å–é™¤äº†æœ€å¾Œä¸€éƒ¨åˆ†çš„è·¯å¾‘
  
  if (dirPath) {
    return `/images/og/${series}/${dirPath}/${fileName}`;
  } else {
    return `/images/og/${series}/${fileName}`;
  }
}

const ogImage = generateOgImagePath(post.id.replace('.mdx', ''), post.data.image, post.data.seo?.ogImage, 'startup');


